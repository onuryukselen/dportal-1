- var static = true
doctype html
html(lang='en')
  head
    base(href=base)
    include ../_partials/head.pug
    block styles
  body.c-app
    div#session-env-config(style="display: none;" base_url= env.BASE_URL SSO_LOGIN= env.SSO_LOGIN SSO_URL= env.SSO_URL CLIENT_ID= env.CLIENT_ID role=(user && user.role ? user.role : ""))
    //- include ../_partials/sidebar.pug
    .c-wrapper.c-fixed-components
      include ../_partials/header.pug
      .c-body
        main(class='c-main')
          .container-fluid
            block view
        //- include ../_partials/footer.pug
    include ../_partials/modals.pug
    include ../_partials/scripts.pug
